{% extends "templates/layout.jinja2" %}
{% block content %}
<section id="manage-customers">
	<div class="page-header">
		<h1>Customer Management
			 <small class="pull-right">
			  	<a href="{{'addcustomer'|route_url}}" title="Add new customer!" class="btn btn-primary">
			  		<i class="icon-plus icon-white"></i> Add Customer
			  	</a>
			 </small>
		 </h1>
	</div> 	
	<div class="row-fluid">
		<div class="span12">&nbsp;</div>
	</div>
    {% if model != None and (model | count) > 0 %} 
	<table id="customerTable" class="table table-bordered table-striped table-condensed">
		<thead>
			<tr>
				<th>Customer No</th>
				<th>First Name</th>
				<th>Last Name</th>
				<th>Email</th>
				<th>Phone</th>
				<th>Mobile</th>
				<th>Address</th>
				<th>City</th>
				<th>Action</th>
			</tr>
		</thead>
		<tbody>
			{% for item in model %}
				{% set cnt = item.Contacts[0] %}
				<tr>
					<td>
						{{item.CustomerNo}}
					</td>
					<td>
						{{cnt.FirstName}}
					</td>
					<td>
						{{cnt.LastName | d('---',True)}}
					</td>
					<td>
						{{cnt.Email | d('---',True)}}
					</td>
					<td>
						{{cnt.Phone | d('---',True)}}
					</td>
					<td>
						{{cnt.Mobile | d('---',True)}}
					</td>
					<td>
						{{cnt.Address | d('---',True)}}
					</td>
					<td>
						{{cnt.City | d('---',True)}}
					</td>
					<td>
						<div class="btn-group">
							<button class="btn btn-primary dropdown-toggle" data-toggle="dropdown">
								Action <span class="caret"></span>
							</button>
							<ul class="dropdown-menu">
								<li>
									<a href="{{'editcustomer' | route_url(cid=item.Id)}}"><i class="icon-pencil"></i> Edit</a>
								</li>
								<li>
									<a href="{{'deletecustomer' | route_url(cid=item.Id)}}"><i class="icon-trash"></i> Delete</a>
								</li>
								<li class="divider"></li>
								<li>
									<a href="#"> Orders History</a>
								</li>
								<li>
									<a href="#"> Payment History</a>
								</li>
							</ul>
						</div>
					</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>
	{% else %}
		<div class="alert alert-info">
			No records found!
		</div>
	{% endif %}
</section>      
{% endblock %}
{% block footerscript %}
<script>
	$(function(){
		//$('#prdTable').dataTable();
	});
</script>
{% endblock %}
