{% macro render(renderer) -%}
<ul>
	<li>
		{% set dis='' %} 
		{% set dis='disabled' if model.Id %}
		{{renderer.label('Name')}}
		{{renderer.text('Name',size=20,disabled=dis,class='error wrong' if renderer.is_error('Name'),title='Company Name')}}
	</li>
	<li>
		{{renderer.label('Description')}}
		{{renderer.textarea('Description',cols="30",rows="4",class='full error wrong' if renderer.is_error('Description') else 'full',title='Company Description')}}
	<li>
		{{renderer.label('Website')}}
		{{renderer.text('Website',size=255,class='error wrong' if renderer.is_error('Website') else 'full',title='Company Website')}}
	<li>
		{{renderer.label('Url')}}
		{{renderer.text('Url',size=255,class='error wrong' if renderer.is_error('Url') else 'full',title='Url')}}
		<input type="hidden" name="tenantId" value="{{model.Id|d('',True)}}" />
	</li>	
</ul>
{% if caller %} caller() {% endif%}
{%- endmacro %}
