{% extends "templates/layout.jinja2" %}
{% block content %}
<section id="manage-products">
	 <div class="page-header">
       <h1> Add Product
		 <small class="pull-right">
		  	<button href="{{'products'|route_url}}" title="Back to Product listing!" class="btn btn-primary">
		  		<i class="icon-arrow-left icon-white"></i> Back
		  	</button>
		 </small></h1>
     </div> 	
     <div class="row-fluid">
     	<div class="span12">&nbsp;</div>
     </div>
     <div class="span8">
     <form action="{{'saveproduct'|route_url}}" method="post" class="form-horizontal">
		<fieldset>
			<div class="control-group">
				<label class="control-label" for="Barcode">Barcode</label>
				<div class="controls">
					<div class="input-prepend">
						<span class="add-on"><i class="icon-barcode"></i></span><input name="Barcode" id="Barcode" class="input-xlarge span3" type="text" value="{{model.Barcode}}">
					</div>
				</div>
			</div>
			<div class="control-group">
				<label class="control-label" for="Name">Name</label>
				<div class="controls">
					<input name="Name" id="Name" class="input-xlarge" type="text" value="{{model.Name}}">
				</div>
			</div>
			<div class="control-group">
				<label class="control-label" for="CategoryId">Category</label>
				<div class="controls">
					<input name="CategoryId" id="CategoryId" class="input-xlarge" type="text" value="{{model.CategoryId}}">
				</div>
			</div>
			<div class="control-group">
				<label class="control-label" for="TaxCategoryId">Tax Category</label>
				<div class="controls">
					<input name="TaxCategoryId" id="TaxCategoryId" class="input-xlarge" type="text" value="{{model.TaxCategoryId}}">
				</div>
			</div>
			<div class="control-group">
				<label class="control-label" for="MRP">MRP</label>
				<div class="controls">
					<input name="MRP" id="MRP" class="input-xlarge" type="text" value="{{model.MRP}}">
				</div>
			</div>
			<div class="control-group">
				<label class="control-label" for="Discount">Discount</label>
				<div class="controls">
					<input name="Discount" id="Discount" class="input-xlarge" type="text" value="{{model.Discount}}">
				</div>
			</div>
			<div class="control-group">
				<label class="control-label" for="BuyPrice">Buy Price</label>
				<div class="controls">
					<input name="BuyPrice" id="BuyPrice" class="input-xlarge" type="text" value="{{model.BuyPrice}}">
				</div>
			</div>
			<div class="control-group">
				<label class="control-label" for="SellPrice">Sell Price</label>
				<div class="controls">
					<input name="SellPrice" id="SellPrice" class="input-xlarge" type="text" value="{{model.SellPrice}}">
				</div>
			</div>
			<div class="control-group">
				<label class="control-label" for="MfgDate">Mfg Date</label>
				<div class="controls">
					<input name="MfgDate" id="MfgDate" class="input-xlarge datetimepicker" type="text" value="{{ model.MfgDate | datetimeformat('%d-%m-%Y')}}">
				</div>
			</div>
			<div class="control-group">
				<label class="control-label" for="ExpiryDate">Expiry Date</label>
				<div class="controls">
					<input name="ExpiryDate" id="ExpiryDate" class="input-xlarge datetimepicker" type="text" value="{{model.ExpiryDate | datetimeformat('%d-%m-%Y')}}">
				</div>
			</div>
		</fieldset>
		<div class="form-actions">
			<input type="hidden" name="Id" value="{{model.Id|d('',True)}}"/>
			<input type="submit" class="btn btn-primary" value="Save"/>
			<input type="reset" class="btn" value="Reset"/>
		</div>
     </form>
     </div>
</section>      
{% endblock %}
