{% extends "templates/admin/layout.jinja2" %}
{% block atopcontent %}
{% endblock %} 
{% block acontent %}
<fieldset class="left">
	<h3>About you</h3>
</fieldset>
<fieldset class="right">
	<h3>Change your password</h3>
	<ul>
		<li>
			<label for="old_password">Old password</label>
			<input id="old_password" type="password" name="old_password"/>
		</li>
		<li>
			<label for="new_password">New password</label>
			<input id="new_password" type="password" name="new_password"/>
		</li>
		<li>
			<label for="new_password2">New password (confirmation)</label>
			<input id="new_password2" type="password" name="new_password2"/>
		</li>
	</ul>
</fieldset>
<fieldset class="left">
	<h3>Translate the application</h3>
	<ul>
		<li>
			<label for="language">Interface language</label>
			<select id="language" name="language">
				<option selected="selected" value="en">English</option>
				<option value="fr">French</option>
				<option value="de">German</option>
				<option value="ja">Japanese</option>
				<option value="hi">Hindi</option>
				<option value="it">Italian</option>
				<option value="ta">Tamil</option>
				<option value="te">Telengu</option>
			</select>
		</li>
	</ul>
</fieldset>
<fieldset class="right">
	<h3>Make it easy</h3>
	<ul>
		<li>
			<label for="nb_display_results">Results to display in listings</label>
			<input id="nb_display_results" type="text" name="nb_display_results"/>
		</li>
		<li>
			<label for="search_filter">Search filter</label>
			<select id="search_filter" name="search_filter">
				<option selected="selected" value=""></option>
				<option value="last_week">last week</option>
				<option value="last_month">last month</option>
				<option value="last_year">last year</option>
				<option value="last_5_years">last 5 years</option>
				<option value="this_week">this week</option>
				<option value="this_month">this month</option>
				<option value="this_year">this year</option>
			</select>
		</li>
	</ul>
</fieldset>
{% endblock%} 
